<div id="container" ng-controller="MapController">
    <div id="nav-conatiner" class="navbar-fixed-top col-xs-9 col-sm-5 col-lg-3">
        <div class="row">
            <div class="col-xs-12">
                <button class="collapse-button" ng-click="isCollapsed = !isCollapsed"><span class="glyphicon glyphicon-chevron-up" ng-class="{'glyphicon-chevron-down': isCollapsed, 'glyphicon-chevron-up': !isCollapsed}"></span></button>
            </div>
        </div>
        <div collapse="isCollapsed">
            <div class="nav">
                <div class="container-fluid">
                    <div class="row">
                        <input type="image" class="icon" ng-src="{{mode == 'DRIVING' ? '/Content/Images/google-car-selected.png' : '/Content/Images/google-car.png'}}" value="DRIVING" ng-click="changeMode('DRIVING')">
                        <input type="image" class="icon" ng-src="{{mode == 'WALKING' ? '/Content/Images/google-person-selected.png' : '/Content/Images/google-person.png'}}" value="WALKING" ng-click="changeMode('WALKING')">
                        <input type="image" class="icon" ng-src="{{mode == 'BICYCLING' ? '/Content/Images/google-bike-selected.png' : '/Content/Images/google-bike.png'}}" value="BICYCLING" ng-click="changeMode('BICYCLING')">
                        <span class="bar">|</span>
                        <input type="image" class="icon" src="~/Content/Images/calendar-time.png" datetimepicker="{step: 60, minDate: 0, maxDate: '+1970/01/15', roundTime: 'ceil'}" ng-model="dateTime">
                    </div>
                    <hr />
                    <div class="row" ng-repeat="waypoint in waypoints track by $index">
                        <div class="col-xs-9 col-sm-10">
                            <input type="text" class="waypoint" ng-class="$last ? 'last' : 'any'" ng-model="waypoints[$index]" ng-autocomplete />
                        </div>
                        <div class="col-xs-3 col-sm-2">
                            <input ng-show="waypoints.length > 2" type="image" class="icon" src="~/Content/Images/google-remove.png" ng-click="removeWaypoint($index)">
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <input type="image" class="icon" src="~/Content/Images/google-add.png" ng-click="addWaypoint()">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button id="submit" class="search-button col-xs-4 text-right" type="submit" ng-click="getDirections()"></button>
                    <div class="col-xs-2" ng-show="loading"><img src="~/Content/Images/loader.gif" /></div>
                </div>
            </div>
        </div>
    </div>

    <div class="angular-google-map-container">
        <ui-gmap-google-map events="map.events" center='map.center' zoom='map.zoom' control="map.control" class="col-sm-8 col-xs-12">
            <ui-gmap-marker coords="marker.coords" icon="marker.icon" idkey="marker.id" options="marker.options" click="showWindowClick(marker.id)" events="marker.events" ng-repeat="marker in markers">
                <ui-gmap-window options="windowOptions[marker.id]" closeclick="closeWindowClick(marker.id)">
                    {{marker.message}}
                </ui-gmap-window>
            </ui-gmap-marker>
        </ui-gmap-google-map>

        <div class="col-sm-4 col-xs-12">
            <table class="table">
                <tr ng-repeat="marker in markers track by $index">
                    <td><view-marker mark="marker.message"></view-marker></td>
                </tr>
            </table>
        </div>
    </div>
</div>
